% Fragments de texte
\newcommand{\COUVRESUMEFR}{\couvTODOConfig{Résumé en français}{\couvResumeFR}}
\newcommand{\COUVRESUMEEN}{\couvTODOConfig{Résumé en anglais}{\couvResumeEN}}
\newcommand{\COUVNOORDRE}{\couvTODOConfig{no d'ordre}{\couvNoOrdre}}

